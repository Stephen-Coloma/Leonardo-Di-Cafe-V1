<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="99.0" prefWidth="256.0" style="-fx-background-color: #ECE9E3; -fx-border-radius: 3;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ClientMenuCard">
   <children>
      <HBox prefHeight="100.0" prefWidth="256.0">
         <children>
            <VBox prefHeight="119.0" prefWidth="88.0">
               <children>
                  <Pane prefHeight="47.0" prefWidth="99.0" />
                  <Label fx:id="productNameLabel" text="Product Name">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="productDetailsLabel" prefHeight="8.0" prefWidth="99.0" text="Product Details">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Label>
                  <Pane prefHeight="95.0" prefWidth="99.0" />
                  <Label fx:id="productPriceLabel" text="P 180.00">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Pane prefHeight="60.0" prefWidth="99.0" />
               </children>
            </VBox>
            <VBox prefHeight="100.0" prefWidth="116.0">
               <children>
                  <Pane prefHeight="12.0" prefWidth="134.0" />
                  <ImageView fx:id="productImage" fitHeight="84.0" fitWidth="133.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/client/menu/menu_productimage.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox prefHeight="89.0" prefWidth="20.0">
               <children>
                  <Pane prefHeight="60.0" prefWidth="33.0" />
                  <Button fx:id="addProductButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="33.0" style="-fx-background-color: #ECE9E3;" text="+" textFill="#634921">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</Pane>
