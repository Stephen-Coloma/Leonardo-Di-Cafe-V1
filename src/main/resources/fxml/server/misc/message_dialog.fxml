<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #634921;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="server.view.misc.MessageDialogView">
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #ECE9E3;" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <TextArea fx:id="messagePromptLabel" editable="false" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #ffffff;" wrapText="true">
                    <font>
                        <Font name="Arial" size="14.0" />
                    </font>
                </TextArea>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="49.0" prefWidth="200.0" spacing="8.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="okButton" mnemonicParsing="false" onMouseEntered="#setOkButtonMouseEntered" onMouseExited="#setOkButtonMouseExited" prefHeight="28.0" prefWidth="50.0" style="-fx-background-color: #5dae65;" text="OK" textFill="WHITE">
                    <font>
                        <Font name="Arial" size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
